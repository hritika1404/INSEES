<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.PopUpFragment"
    android:background="#D5353535">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10sp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Add Task"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/cancelPopUpButton"
            android:layout_marginLeft="260sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_cancel_24"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10sp"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etPopUpTaskName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10sp"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Description"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/etPopUpTaskDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_border"
            android:minHeight="48dp"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10sp"
        android:layout_marginTop="10sp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Deadline"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10sp"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView                android:id="@+id/etPopUpTaskTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_border"
                android:drawableEnd="@drawable/baseline_access_time_filled_24"
                android:hint="Time"
                android:padding="10sp"
                android:textColorHint="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/etPopUpTaskDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_weight="1"
                android:background="@drawable/edit_text_border"
                android:drawableEnd="@drawable/baseline_calendar_today_24"
                android:hint="Date"
                android:padding="10sp"
                android:textColorHint="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnPopUpAddTask"
        android:layout_margin="20sp"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        app:cardCornerRadius="10sp"
        android:backgroundTint="@color/black">
        <TextView
            android:layout_gravity="center"
            android:text="Add Task"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>