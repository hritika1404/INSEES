<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="8dp"
    tools:context=".Fragments.AboutMembersFragment">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bentham"
        android:layout_marginStart="20dp"
        android:text="@string/about_insees"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/insees_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="16dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/rounded_corners" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:text="The department was established in the year 2008 and currently offers B.Tech programme in Electronics and Instrumentation Engineering, M.Tech in Instrumentation Engineering and PhD program. The impact of electronics and instrumentation engineering touches almost every area of todayâ€™s life. This department with its state-of-the-art laboratories and young and dynamic faculty members is involved in providing quality education and promoting innovative research. The lab facilities include Sensors and Transducers, Analog and Digital Circuits, Measurement, Control and Instrumentation, Power Electronics, Biomedical, Communication, Microprocessor, and Design and Fabrication Labs. Facilities are available for interdisciplinary research activities in the broad domain of signal processing, biomedical engineering, instrumentation, sensors, embedded systems, robotics, control and automation, Communication, and micro/nanoelectronics. High-end Lab facilities have been established with funding from external agencies."
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bevietnamprosemibold"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:text="Professors"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <!-- First GridLayout -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:scrollbars="vertical" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
