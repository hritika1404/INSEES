<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".fragment.SemesterFragment">

    <TextView
        android:id="@+id/headerstudymat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/bentham"
        android:text="@string/study_materials"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/SemesterList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/semester_item_layout"
        android:clipToPadding="false"
        android:dividerHeight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:scrollbars="none"/>

</LinearLayout>