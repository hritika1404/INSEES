<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".fragment.SemesterFragment">


    <TextView
        android:id="@+id/headerstudymat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/bentham"
        android:text="@string/study_materials"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/SemesterList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/semester_item_layout"
        android:layout_marginTop="30sp"
        android:padding="8dp"/>

</LinearLayout>