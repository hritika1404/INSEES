<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:text="Connect"
        android:textStyle="bold"
        android:fontFamily="@font/bevietnampromedium"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="10sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/git_icon"
            android:src="@drawable/github_logo"
            android:layout_weight="1"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:padding="15dp"/>

        <ImageView
            android:id="@+id/linkedIn_icon"
            android:src="@drawable/pngegg"
            android:layout_weight="1"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:padding="15dp"/>

        <ImageView
            android:id="@+id/insta_icon"
            android:src="@drawable/insta"
            android:layout_weight="1"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:padding="15dp"/>



    </LinearLayout>

    <TextView
        android:layout_gravity="center_horizontal"
        android:text="Support the developers"
        android:textColor="#000000"
        android:textSize="15sp"
        android:fontFamily="@font/bevietnamprolight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>