<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.CompleteProfileFragment"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp"
        android:layout_marginHorizontal="12dp">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="32dp"
            android:id="@+id/complete_profile_icon"
            android:src="@drawable/complete_profile"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/complete_profile_text"
            android:orientation="vertical"
            android:layout_below="@id/complete_profile_icon">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete Your Profile."
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/primaryText"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                android:alpha="0.75"
                android:textColor="@color/primaryText"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/complete_profile_text"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/primaryText"
                android:layout_marginBottom="5dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/rounded_edit_text"
                android:id="@+id/et_name_complete_profile_layout"
                >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_name_complete_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:background="#00000000"
                android:padding="4dp"
                android:ems="15"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Your Profile Photo"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/primaryText"
                android:layout_marginTop="20dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="#70434343"
                android:layout_marginTop="5dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:id="@+id/profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:contentDescription="profile photo" />


                <Button
                    android:id="@+id/close_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/baseline_close_24"
                    android:layout_gravity="right"
                    android:visibility="gone"/>

                <LinearLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/upload"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="25dp"/>
                    
                    <TextView
                        android:id="@+id/upload_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click here to upload"
                        android:textSize="10sp"
                        android:textColor="@color/primaryText"
                        android:layout_gravity="center_horizontal"/>

                </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OR"
                        android:textSize="10sp"
                        android:textColor="@color/primaryText"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/open_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open Camera"
                        android:textSize="10sp"
                        android:textColor="@color/primaryText"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:layout_width="match_parent"
                android:id="@+id/btn_next_complete_profile"
                android:background="@drawable/rounded_button"
                android:layout_height="40dp"
                android:text="Next"
                android:layout_marginTop="25dp"
                android:textSize="12sp"
                />

        </LinearLayout>

    </RelativeLayout>

    </ScrollView>


</FrameLayout>